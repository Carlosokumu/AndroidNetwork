<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->


        <style name="BaseTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
            <item name="colorPrimary">@color/backgroundSecondary</item>
            <item name="colorPrimaryDark">@color/backgroundSecondary</item>
            <item name="colorAccent">@color/colorAccent</item>

            <item name="android:colorBackground">@color/backgroundPrimary</item>
            <item name="android:textColor">@color/textPrimary</item>
            <item name="android:textColorPrimary">@color/textPrimary</item>
            <item name="android:textColorSecondary">@color/textSecondary</item>
            <item name="android:textColorLink">@color/colorAccent</item>
            <item name="android:actionMenuTextColor">@color/blue</item>

            <item name="android:windowContentTransitions">true</item>
            <item name="android:windowActivityTransitions">true</item>
            <item name="android:windowAllowEnterTransitionOverlap">true</item>
            <item name="android:windowAllowReturnTransitionOverlap">true</item>
            <item name="searchViewStyle">@style/WeatherSearchView</item>
        </style>

            <style name="WeatherAppTheme" parent="BaseTheme">
                <!-- Status bar styling -->
                <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
                <item name="android:statusBarColor">@color/backgroundSecondary</item>
            </style>




        <style name="WeatherSearchView" parent="Widget.AppCompat.SearchView">
            <item name="searchHintIcon">@null</item>
            <item name="searchIcon">@drawable/ic_search_24</item>
        </style>



</resources>